{
  "$schema": "http://json.schemastore.org/template",
  "author": "Keboo",
  "classifications": [
    "Common",
    "NuGet"
  ],
  "identity": "Keboo.Library.NuGet",
  "name": "Keboo Class Library for NuGet",
  "shortName": "keboo.nuget",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "preferNameDirectory":true,
  "sourceName": "NuGetLib",
  "SpecialCustomOperations": {
    "**.slnx": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "if": [ "<!--#if" ],
            "else": [ "<!--#else" ],
            "elseif": [ "<!--#elseif" ],
            "endif": [ "<!--#endif" ],
            "trim": true,
            "wholeLine": true
          }
        }
      ]
    }
  },
  "symbols":{
    "createdDate": {
      "type": "generated",
      "generator": "now",
      "parameters": {
      "format": "yyyy"
      },
      "replaces":"1970"
    },
    "user_secrets_id":{
      "type": "generated",
      "generator": "guid",
      "replaces": "12345678-9abc-0123-4567-890abcdef123",
      "parameters": {
        "defaultFormat":"d"
      }
    },
    "no-sln": {
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false",
      "description": "Do not include a solution file."
    },
    "tests": {
      "type": "parameter",
      "dataType": "choice",
      "choices": [
        {
          "choice": "xunit",
          "description": "Use xUnit v3 testing framework"
        },
        {
          "choice": "mstest",
          "description": "Use MSTest testing framework"
        },
        {
          "choice": "tunit",
          "description": "Use TUnit testing framework"
        },
        {
          "choice": "none",
          "description": "Do not include tests"
        }
      ],
      "defaultValue": "xunit",
      "description": "The testing framework to use"
    },
    "useXunit": {
      "type": "computed",
      "value": "(tests == \"xunit\")"
    },
    "useMstest": {
      "type": "computed",
      "value": "(tests == \"mstest\")"
    },
    "useTunit": {
      "type": "computed",
      "value": "(tests == \"tunit\")"
    },
    "noTests": {
      "type": "computed",
      "value": "(tests == \"none\")"
    },
    "sln": {
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false",
      "description": "Use legacy .sln format instead of .slnx format"
    },
    "pipeline": {
      "type": "parameter",
      "dataType": "choice",
      "choices": [
        {
          "choice": "github",
          "description": "Use GitHub Actions for CI/CD"
        },
        {
          "choice": "azuredevops",
          "description": "Use Azure DevOps Pipelines for CI/CD"
        },
        {
          "choice": "none",
          "description": "Do not include CI/CD pipeline files"
        }
      ],
      "defaultValue": "github",
      "description": "The CI/CD provider to use"
    },
    "useGitHub": {
      "type": "computed",
      "value": "(pipeline == \"github\")"
    },
    "useAzureDevOps": {
      "type": "computed",
      "value": "(pipeline == \"azuredevops\")"
    },
    "noPipeline": {
      "type": "computed",
      "value": "(pipeline == \"none\")"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(no-sln)",
          "exclude": [
            "NuGetLib.sln",
            "NuGetLib.slnx"
          ]
        },
        {
          "condition": "(sln && !no-sln)",
          "exclude": [
            "NuGetLib.slnx"
          ]
        },
        {
          "condition": "(!sln && !no-sln)",
          "exclude": [
            "NuGetLib.sln"
          ]
        },
        {
          "condition": "(noTests)",
          "exclude": [
            "NuGetLib.Tests/**",
            ".github/workflows/pr-code-coverage-comment.yml"
          ]
        },
        {
          "condition": "(useXunit)",
          "exclude": [
            "NuGetLib.Tests/Class1Tests.cs",
            "NuGetLib.Tests/Class1Tests.mstest.cs",
            "NuGetLib.Tests/Class1Tests.tunit.cs"
          ],
          "rename": {
            "Class1Tests.xunit.cs": "Class1Tests.cs"
          }
        },
        {
          "condition": "(useMstest)",
          "exclude": [
            "NuGetLib.Tests/Class1Tests.cs",
            "NuGetLib.Tests/Class1Tests.xunit.cs",
            "NuGetLib.Tests/Class1Tests.tunit.cs"
          ],
          "rename": {
            "Class1Tests.mstest.cs": "Class1Tests.cs"
          }
        },
        {
          "condition": "(useTunit)",
          "exclude": [
            "NuGetLib.Tests/Class1Tests.cs",
            "NuGetLib.Tests/Class1Tests.xunit.cs",
            "NuGetLib.Tests/Class1Tests.mstest.cs"
          ],
          "rename": {
            "Class1Tests.tunit.cs": "Class1Tests.cs"
          }
        },
        {
          "condition": "(useGitHub)",
          "exclude": [
            ".devops/**"
          ]
        },
        {
          "condition": "(useAzureDevOps)",
          "exclude": [
            ".github/**"
          ]
        },
        {
          "condition": "(noPipeline)",
          "exclude": [
            ".github/**",
            ".devops/**"
          ]
        }
      ]
    }
  ]
}