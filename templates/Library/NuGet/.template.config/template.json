{
  "$schema": "http://json.schemastore.org/template",
  "author": "Keboo",
  "classifications": [
    "Common",
    "NuGet"
  ],
  "identity": "Keboo.Library.NuGet",
  "name": "Keboo Class Library for NuGet",
  "shortName": "keboo.nuget",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "preferNameDirectory":true,
  "sourceName": "NuGetLib",
  "symbols":{
    "createdDate": {
      "type": "generated",
      "generator": "now",
      "parameters": {
      "format": "yyyy"
      },
      "replaces":"1970"
    },
    "user_secrets_id":{
      "type": "generated",
      "generator": "guid",
      "replaces": "12345678-9abc-0123-4567-890abcdef123",
      "parameters": {
        "defaultFormat":"d"
      }
    },
    "no-sln": {
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false",
      "description": "Do not include a solution file."
    },
    "no-tests": {
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false"
    },
    "sln": {
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false",
      "description": "Use legacy .sln format instead of .slnx format"
    },
    "pipeline": {
      "type": "parameter",
      "dataType": "choice",
      "choices": [
        {
          "choice": "github",
          "description": "Use GitHub Actions for CI/CD"
        },
        {
          "choice": "azuredevops",
          "description": "Use Azure DevOps Pipelines for CI/CD"
        }
      ],
      "defaultValue": "github",
      "description": "The CI/CD provider to use"
    },
    "no-ai": {
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false",
      "description": "Exclude AI configuration files (.vscode/mcp.json)"
    },
    "useGitHub": {
      "type": "computed",
      "value": "(pipeline == \"github\")"
    },
    "useAzureDevOps": {
      "type": "computed",
      "value": "(pipeline == \"azuredevops\")"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(no-sln)",
          "exclude": [
            "NuGetLib.sln",
            "NuGetLib.slnx"
          ]
        },
        {
          "condition": "(sln && !no-sln)",
          "exclude": [
            "NuGetLib.slnx"
          ]
        },
        {
          "condition": "(!sln && !no-sln)",
          "exclude": [
            "NuGetLib.sln"
          ]
        },
        {
          "condition": "(no-tests)",
          "exclude": [
            "NuGetLib.Tests/*",
            ".github/.workflows/pr-code-coverage-comment.yml"
          ]
        },
        {
          "condition": "(useGitHub)",
          "exclude": [
            ".devops/**"
          ]
        },
        {
          "condition": "(useAzureDevOps)",
          "exclude": [
            ".github/**"
          ]
        },
        {
          "condition": "(no-ai)",
          "exclude": [
            ".vscode/mcp.json"
          ]
        }
      ]
    }
  ]
}