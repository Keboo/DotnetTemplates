@page "/ticket-queues"
@using BlazorApp.Core.Services
@using BlazorApp.Data
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@inject ITicketQueueService TicketQueueService
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer

<PageTitle>Ticket Queues</PageTitle>

<h1>Ticket Queues</h1>

<AuthorizeView>
    <Authorized Context="authContext">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Create New Queue</h5>
                <EditForm Model="@newQueueName" OnValidSubmit="CreateQueue">
                    <div class="mb-3">
                        <label class="form-label">Queue Name:</label>
                        <InputText @bind-Value="newQueueName" class="form-control" placeholder="Enter queue name" />
                    </div>
                    <button type="submit" class="btn btn-primary" disabled="@isCreating">
                        @if (isCreating)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Create Queue
                    </button>
                </EditForm>
            </div>
        </div>
    </Authorized>
</AuthorizeView>

@if (queues is null)
{
    <p><em>Loading queues...</em></p>
}
else if (!queues.Any())
{
    <p>No ticket queues available. Create one to get started!</p>
}
else
{
    <div class="row">
        @foreach (var queue in queues)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@queue.FriendlyName</h5>
                        <div class="mb-3">
                            <div class="row">
                                <div class="col-12">
                                    <div class="text-center p-3 bg-light rounded">
                                        <div class="small text-muted">Now Serving</div>
                                        @if (queue.CurrentNumber > 0 && queue.CurrentNumber < queue.NextNumber)
                                        {
                                            <div class="h2 mb-0">@queue.CurrentNumber</div>
                                        }
                                        else
                                        {
                                            <div class="h2 mb-0">Waiting For Next</div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (takenTickets.ContainsKey(queue.Id))
                        {
                            <div class="alert alert-success" role="alert">
                                <strong>Your Ticket: #@takenTickets[queue.Id]</strong>
                            </div>
                        }

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" @onclick="() => TakeTicket(queue.Id)" disabled="@IsProcessing(queue.Id)">
                                @if (IsProcessing(queue.Id))
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                Take Ticket
                            </button>

                            <AuthorizeView>
                                <Authorized>
                                    <button class="btn btn-success" @onclick="() => HandleNext(queue.Id)" disabled="@IsProcessing(queue.Id)">
                                        @if (IsProcessing(queue.Id))
                                        {
                                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        }
                                        Handle Next
                                    </button>

                                    @if (IsCreator(queue))
                                    {
                                        <button class="btn btn-warning" @onclick="() => ResetQueue(queue.Id)" disabled="@IsProcessing(queue.Id)">
                                            @if (IsProcessing(queue.Id))
                                            {
                                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                            }
                                            Reset Queue
                                        </button>
                                        <button class="btn btn-danger" @onclick="() => DeleteQueue(queue.Id)" disabled="@IsProcessing(queue.Id)">
                                            @if (IsProcessing(queue.Id))
                                            {
                                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                            }
                                            Delete Queue
                                        </button>
                                    }
                                </Authorized>
                            </AuthorizeView>
                        </div>

                        <div class="mt-2 small text-muted">
                            Created: @queue.CreatedDate.ToLocalTime().ToString("g")
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

@code {
    private List<TicketQueue>? queues;
    private string newQueueName = string.Empty;
    private Dictionary<Guid, int> takenTickets = new();
    private HashSet<Guid> processingQueues = new();
    private bool isCreating;
    private string? errorMessage;
    private string? currentUserId;

    protected override async Task OnInitializedAsync()
    {
        await LoadQueues();
        await LoadCurrentUser();
    }

    private async Task LoadCurrentUser()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            currentUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        }
    }

    private async Task LoadQueues()
    {
        try
        {
            queues = (await TicketQueueService.GetAllQueuesAsync()).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading queues: {ex.Message}";
        }
    }

    private async Task CreateQueue()
    {
        if (string.IsNullOrWhiteSpace(newQueueName) || currentUserId == null)
            return;

        isCreating = true;
        errorMessage = null;

        try
        {
            await TicketQueueService.CreateQueueAsync(newQueueName, currentUserId);
            newQueueName = string.Empty;
            await LoadQueues();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating queue: {ex.Message}";
        }
        finally
        {
            isCreating = false;
        }
    }

    private async Task TakeTicket(Guid queueId)
    {
        processingQueues.Add(queueId);
        errorMessage = null;

        try
        {
            var ticketNumber = await TicketQueueService.TakeTicketAsync(queueId);
            takenTickets[queueId] = ticketNumber;
            await LoadQueues();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error taking ticket: {ex.Message}";
        }
        finally
        {
            processingQueues.Remove(queueId);
        }
    }

    private async Task HandleNext(Guid queueId)
    {
        if (currentUserId == null)
            return;

        processingQueues.Add(queueId);
        errorMessage = null;

        try
        {
            await TicketQueueService.HandleNextAsync(queueId, currentUserId);
            await LoadQueues();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error handling next: {ex.Message}";
        }
        finally
        {
            processingQueues.Remove(queueId);
        }
    }

    private async Task ResetQueue(Guid queueId)
    {
        if (currentUserId == null)
            return;

        processingQueues.Add(queueId);
        errorMessage = null;

        try
        {
            await TicketQueueService.ResetQueueAsync(queueId, currentUserId);
            takenTickets.Remove(queueId);
            await LoadQueues();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error resetting queue: {ex.Message}";
        }
        finally
        {
            processingQueues.Remove(queueId);
        }
    }

    private async Task DeleteQueue(Guid queueId)
    {
        if (currentUserId == null)
            return;

        processingQueues.Add(queueId);
        errorMessage = null;

        try
        {
            await TicketQueueService.DeleteQueueAsync(queueId, currentUserId);
            takenTickets.Remove(queueId);
            await LoadQueues();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting queue: {ex.Message}";
        }
        finally
        {
            processingQueues.Remove(queueId);
        }
    }

    private bool IsProcessing(Guid queueId) => processingQueues.Contains(queueId);

    private bool IsCreator(TicketQueue queue) => currentUserId != null && queue.CreatedByUserId == currentUserId;
}
