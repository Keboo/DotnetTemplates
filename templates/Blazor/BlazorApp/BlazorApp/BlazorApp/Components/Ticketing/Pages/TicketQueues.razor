@page "/ticket-queues"
@using BlazorApp.Core.Ticketing
@using BlazorApp.Data
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.SignalR.Client
@inject ITicketQueueService TicketQueueService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@implements IAsyncDisposable
@rendermode InteractiveServer

<PageTitle>Ticket Queues</PageTitle>

<h1>Ticket Queues</h1>

<AuthorizeView>
    <Authorized Context="authContext">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Create New Queue</h5>
                <EditForm Model="@newQueueName" OnValidSubmit="CreateQueue">
                    <div class="mb-3">
                        <label class="form-label">Queue Name:</label>
                        <InputText @bind-Value="newQueueName" class="form-control" placeholder="Enter queue name" />
                    </div>
                    <button type="submit" class="btn btn-primary" disabled="@isCreating">
                        @if (isCreating)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        Create Queue
                    </button>
                </EditForm>
            </div>
        </div>
    </Authorized>
</AuthorizeView>

@if (queues is null)
{
    <p><em>Loading queues...</em></p>
}
else if (!queues.Any())
{
    <AuthorizeView>
        <Authorized>
            <p>No ticket queues available. Create one to get started!</p>
        </Authorized>
        <NotAuthorized>
            <p>No ticket queues available.</p>
        </NotAuthorized>
    </AuthorizeView>
}
else
{
    <div class="row">
        @foreach (var queue in queues)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@queue.FriendlyName</h5>
                        <div class="mb-3">
                            <div class="row">
                                <div class="col-12">
                                    <div class="text-center p-3 bg-light rounded">
                                        <div class="small text-muted">Now Serving</div>
                                        <div>@queue.CurrentNumber / @queue.NextNumber</div>
                                        @if (queue.CurrentNumber > 0 && queue.CurrentNumber < queue.NextNumber)
                                        {
                                            <div class="h2 mb-0">@queue.CurrentNumber</div>
                                        }
                                        else
                                        {
                                            <div class="h2 mb-0">Waiting For Next</div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (takenTickets.ContainsKey(queue.Id))
                        {
                            <div class="alert alert-success" role="alert">
                                <strong>Your Ticket: #@takenTickets[queue.Id]</strong>
                            </div>
                        }

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" @onclick="() => TakeTicket(queue.Id)" disabled="@IsProcessing(queue.Id)">
                                @if (IsProcessing(queue.Id))
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                Take Ticket
                            </button>

                            <AuthorizeView>
                                <Authorized>
                                    <button class="btn btn-success" @onclick="() => HandleNext(queue.Id)" disabled="@IsProcessing(queue.Id)">
                                        @if (IsProcessing(queue.Id))
                                        {
                                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        }
                                        Handle Next
                                    </button>

                                    @if (IsCreator(queue))
                                    {
                                        <button class="btn btn-warning" @onclick="() => ResetQueue(queue.Id)" disabled="@IsProcessing(queue.Id)">
                                            @if (IsProcessing(queue.Id))
                                            {
                                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                            }
                                            Reset Queue
                                        </button>
                                        <button class="btn btn-danger" @onclick="() => DeleteQueue(queue.Id)" disabled="@IsProcessing(queue.Id)">
                                            @if (IsProcessing(queue.Id))
                                            {
                                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                            }
                                            Delete Queue
                                        </button>
                                    }
                                </Authorized>
                            </AuthorizeView>
                        </div>

                        <div class="mt-2 small text-muted">
                            Created: @queue.CreatedDate.ToLocalTime().ToString("g")
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

@code {
    private HubConnection? hubConnection;
    private List<TicketQueue>? queues;
    private string newQueueName = string.Empty;
    private Dictionary<Guid, int> takenTickets = new();
    private HashSet<Guid> processingQueues = new();
    private bool isCreating;
    private string? errorMessage;
    private string? currentUserId;

    protected override async Task OnInitializedAsync()
    {
        await LoadQueues();
        await LoadCurrentUser();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await InitializeSignalR();
        }
    }

    private async Task InitializeSignalR()
    {
        try
        {
            Uri hubUri = NavigationManager.ToAbsoluteUri("/hubs/ticketqueue");
            if (hubUri.Host.EndsWith(".localhost"))
            {
                UriBuilder builder = new(hubUri);
                builder.Host = "localhost";
                hubUri = builder.Uri;
            }
            hubConnection = new HubConnectionBuilder()
                .WithUrl(hubUri)
                .WithAutomaticReconnect()
                .Build();

            hubConnection.On<TicketQueue>("QueueCreated", async (queue) =>
            {
                queues ??= new List<TicketQueue>();
                queues.Insert(0, queue);
                await InvokeAsync(StateHasChanged);
            });

            hubConnection.On<TicketQueue>("QueueUpdated", async (updatedQueue) =>
            {
                if (queues != null)
                {
                    var index = queues.FindIndex(q => q.Id == updatedQueue.Id);
                    if (index >= 0)
                    {
                        queues[index] = updatedQueue;
                        await InvokeAsync(StateHasChanged);
                    }
                }
            });

            hubConnection.On<Guid>("QueueDeleted", async (queueId) =>
            {
                if (queues != null)
                {
                    queues.RemoveAll(q => q.Id == queueId);
                    takenTickets.Remove(queueId);
                    await InvokeAsync(StateHasChanged);
                }
            });

            await hubConnection.StartAsync();
            await hubConnection.SendAsync("JoinAllQueues");
        }
        catch (Exception ex)
        {
            errorMessage = $"SignalR connection error: {ex.Message}";
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task LoadCurrentUser()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            currentUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        }
    }

    private async Task LoadQueues()
    {
        try
        {
            queues = (await TicketQueueService.GetAllQueuesAsync()).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading queues: {ex.Message}";
        }
    }

    private async Task CreateQueue()
    {
        if (string.IsNullOrWhiteSpace(newQueueName) || currentUserId == null)
            return;

        isCreating = true;
        errorMessage = null;

        try
        {
            await TicketQueueService.CreateQueueAsync(newQueueName, currentUserId, CancellationToken.None);
            newQueueName = string.Empty;
            await LoadQueues();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating queue: {ex.Message}";
        }
        finally
        {
            isCreating = false;
        }
    }

    private async Task TakeTicket(Guid queueId)
    {
        processingQueues.Add(queueId);
        errorMessage = null;

        try
        {
            var ticketNumber = await TicketQueueService.TakeTicketAsync(queueId);
            takenTickets[queueId] = ticketNumber;
            await LoadQueues();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error taking ticket: {ex.Message}";
        }
        finally
        {
            processingQueues.Remove(queueId);
        }
    }

    private async Task HandleNext(Guid queueId)
    {
        if (currentUserId == null)
            return;

        processingQueues.Add(queueId);
        errorMessage = null;

        try
        {
            await TicketQueueService.HandleNextAsync(queueId, currentUserId);
            await LoadQueues();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error handling next: {ex.Message}";
        }
        finally
        {
            processingQueues.Remove(queueId);
        }
    }

    private async Task ResetQueue(Guid queueId)
    {
        if (currentUserId == null)
            return;

        processingQueues.Add(queueId);
        errorMessage = null;

        try
        {
            await TicketQueueService.ResetQueueAsync(queueId, currentUserId);
            takenTickets.Remove(queueId);
            await LoadQueues();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error resetting queue: {ex.Message}";
        }
        finally
        {
            processingQueues.Remove(queueId);
        }
    }

    private async Task DeleteQueue(Guid queueId)
    {
        if (currentUserId == null)
            return;

        processingQueues.Add(queueId);
        errorMessage = null;

        try
        {
            await TicketQueueService.DeleteQueueAsync(queueId, currentUserId, CancellationToken.None);
            takenTickets.Remove(queueId);
            await LoadQueues();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting queue: {ex.Message}";
        }
        finally
        {
            processingQueues.Remove(queueId);
        }
    }

    private bool IsProcessing(Guid queueId) => processingQueues.Contains(queueId);

    private bool IsCreator(TicketQueue queue) => currentUserId != null && queue.CreatedByUserId == currentUserId;

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }
}
