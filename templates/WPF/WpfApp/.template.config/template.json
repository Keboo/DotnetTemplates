{
  "$schema": "http://json.schemastore.org/template",
  "author": "Keboo",
  "classifications": [
    "Common",
    "WPF"
  ],
  "identity": "Keboo.WpfTemplates.FullApp",
  "name": "Keboo Full WPF Application",
  "shortName": "keboo.wpf",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "preferNameDirectory":true,
  "sourceName": "WpfApp",
  "symbols":{
    "user_secrets_id":{
      "type": "generated",
      "generator": "guid",
      "replaces": "12345678-9abc-0123-4567-890abcdef123",
      "parameters": {
        "defaultFormat":"d"
      }
    },
    "no-sln": {
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false",
      "description": "Do not include a solution file."
    },
    "tests": {
      "type": "parameter",
      "dataType": "choice",
      "choices": [
        {
          "choice": "xunit",
          "description": "Use xUnit v3 testing framework"
        },
        {
          "choice": "mstest",
          "description": "Use MSTest testing framework"
        },
        {
          "choice": "tunit",
          "description": "Use TUnit testing framework"
        },
        {
          "choice": "none",
          "description": "Do not include tests"
        }
      ],
      "defaultValue": "xunit",
      "description": "The testing framework to use"
    },
    "useXunit": {
      "type": "computed",
      "value": "(tests == \"xunit\")"
    },
    "useMstest": {
      "type": "computed",
      "value": "(tests == \"mstest\")"
    },
    "useTunit": {
      "type": "computed",
      "value": "(tests == \"tunit\")"
    },
    "noTests": {
      "type": "computed",
      "value": "(tests == \"none\")"
    },
    "sln": {
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false",
      "description": "Use legacy .sln format instead of .slnx format"
    },
    "pipeline": {
      "type": "parameter",
      "dataType": "choice",
      "choices": [
        {
          "choice": "github",
          "description": "Use GitHub Actions for CI/CD"
        },
        {
          "choice": "azuredevops",
          "description": "Use Azure DevOps Pipelines for CI/CD"
        }
      ],
      "defaultValue": "github",
      "description": "The CI/CD provider to use"
    },
    "useGitHub": {
      "type": "computed",
      "value": "(pipeline == \"github\")"
    },
    "useAzureDevOps": {
      "type": "computed",
      "value": "(pipeline == \"azuredevops\")"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(no-sln)",
          "exclude": [
            "WpfApp.sln",
            "WpfApp.slnx"
          ]
        },
        {
          "condition": "(sln && !no-sln)",
          "exclude": [
            "WpfApp.slnx"
          ]
        },
        {
          "condition": "(!sln && !no-sln)",
          "exclude": [
            "WpfApp.sln"
          ]
        },
        {
          "condition": "(noTests)",
          "exclude": [
            "WpfApp.Tests/**",
            ".github/workflows/pr-code-coverage-comment.yml"
          ]
        },
        {
          "condition": "(useXunit)",
          "exclude": [
            "WpfApp.Tests/MainWindowViewModelTests.cs",
            "WpfApp.Tests/MainWindowViewModelTests.mstest.cs",
            "WpfApp.Tests/MainWindowViewModelTests.tunit.cs"
          ],
          "rename": {
            "MainWindowViewModelTests.xunit.cs": "MainWindowViewModelTests.cs"
          }
        },
        {
          "condition": "(useMstest)",
          "exclude": [
            "WpfApp.Tests/MainWindowViewModelTests.cs",
            "WpfApp.Tests/MainWindowViewModelTests.xunit.cs",
            "WpfApp.Tests/MainWindowViewModelTests.tunit.cs"
          ],
          "rename": {
            "MainWindowViewModelTests.mstest.cs": "MainWindowViewModelTests.cs"
          }
        },
        {
          "condition": "(useTunit)",
          "exclude": [
            "WpfApp.Tests/MainWindowViewModelTests.cs",
            "WpfApp.Tests/MainWindowViewModelTests.xunit.cs",
            "WpfApp.Tests/MainWindowViewModelTests.mstest.cs"
          ],
          "rename": {
            "MainWindowViewModelTests.tunit.cs": "MainWindowViewModelTests.cs"
          }
        },
        {
          "condition": "(useGitHub)",
          "exclude": [
            ".devops/**"
          ]
        },
        {
          "condition": "(useAzureDevOps)",
          "exclude": [
            ".github/**"
          ]
        }
      ]
    }
  ]
}