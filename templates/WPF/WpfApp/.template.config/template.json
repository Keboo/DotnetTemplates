{
  "$schema": "http://json.schemastore.org/template",
  "author": "Keboo",
  "classifications": [
    "Common",
    "WPF"
  ],
  "identity": "Keboo.WpfTemplates.FullApp",
  "name": "Keboo Full WPF Application",
  "shortName": "keboo.wpf",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "preferNameDirectory":true,
  "sourceName": "WpfApp",
  "symbols":{
    "user_secrets_id":{
      "type": "generated",
      "generator": "guid",
      "replaces": "12345678-9abc-0123-4567-890abcdef123",
      "parameters": {
        "defaultFormat":"d"
      }
    },
    "no-sln": {
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false",
      "description": "Do not include a solution file."
    },
    "no-tests": {
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false"
    },
    "sln": {
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false",
      "description": "Use legacy .sln format instead of .slnx format"
    },
    "pipeline": {
      "type": "parameter",
      "dataType": "choice",
      "choices": [
        {
          "choice": "github",
          "description": "Use GitHub Actions for CI/CD"
        },
        {
          "choice": "azuredevops",
          "description": "Use Azure DevOps Pipelines for CI/CD"
        }
      ],
      "defaultValue": "github",
      "description": "The CI/CD provider to use"
    },
    "no-ai": {
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false",
      "description": "Exclude AI configuration files (mcp.json)"
    },
    "useGitHub": {
      "type": "computed",
      "value": "(pipeline == \"github\")"
    },
    "useAzureDevOps": {
      "type": "computed",
      "value": "(pipeline == \"azuredevops\")"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(no-sln)",
          "exclude": [
            "WpfApp.sln",
            "WpfApp.slnx"
          ]
        },
        {
          "condition": "(sln && !no-sln)",
          "exclude": [
            "WpfApp.slnx"
          ]
        },
        {
          "condition": "(!sln && !no-sln)",
          "exclude": [
            "WpfApp.sln"
          ]
        },
        {
          "condition": "(no-tests)",
          "exclude": [
            "WpfApp.Tests/*"
          ]
        },
        {
          "condition": "(useGitHub)",
          "exclude": [
            ".devops/**"
          ]
        },
        {
          "condition": "(useAzureDevOps)",
          "exclude": [
            ".github/**"
          ]
        },
        {
          "condition": "(no-ai)",
          "exclude": [
            "mcp.json"
          ]
        }
      ]
    }
  ]
}