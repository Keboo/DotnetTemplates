{
  "$schema": "http://json.schemastore.org/template",
  "author": "Keboo",
  "classifications": [
    "Common",
    "Avalonia"
  ],
  "identity": "Keboo.Avalonia.Solution",
  "name": "Keboo Avalonia Application",
  "shortName": "keboo.avalonia",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "preferNameDirectory":true,
  "sourceName": "SampleAvaloniaApplication",
  "SpecialCustomOperations": {
    "**.slnx": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "if": [ "<!--#if" ],
            "else": [ "<!--#else" ],
            "elseif": [ "<!--#elseif" ],
            "endif": [ "<!--#endif" ],
            "trim": true,
            "wholeLine": true
          }
        }
      ]
    }
  },
  "symbols":{
    "user_secrets_id":{
      "type": "generated",
      "generator": "guid",
      "replaces": "12345678-9abc-0123-4567-890abcdef123",
      "parameters": {
        "defaultFormat":"d"
      }
    },
    "no-sln": {
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false"
    },
    "tests": {
      "type": "parameter",
      "dataType": "choice",
      "choices": [
        {
          "choice": "xunit",
          "description": "Use xUnit v3 testing framework"
        },
        {
          "choice": "mstest",
          "description": "Use MSTest testing framework"
        },
        {
          "choice": "tunit",
          "description": "Use TUnit testing framework"
        },
        {
          "choice": "none",
          "description": "Do not include tests"
        }
      ],
      "defaultValue": "xunit",
      "description": "The testing framework to use"
    },
    "useXunit": {
      "type": "computed",
      "value": "(tests == \"xunit\")"
    },
    "useMstest": {
      "type": "computed",
      "value": "(tests == \"mstest\")"
    },
    "useTunit": {
      "type": "computed",
      "value": "(tests == \"tunit\")"
    },
    "noTests": {
      "type": "computed",
      "value": "(tests == \"none\")"
    },
    "sln": {
      "type": "parameter",
      "dataType":"bool",
      "defaultValue": "false",
      "description": "Use legacy .sln format instead of .slnx format"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(no-sln)",
          "exclude": [
            "SampleAvaloniaApplication.sln",
            "SampleAvaloniaApplication.slnx"
          ]
        },
        {
          "condition": "(sln && !no-sln)",
          "exclude": [
            "SampleAvaloniaApplication.slnx"
          ]
        },
        {
          "condition": "(!sln && !no-sln)",
          "exclude": [
            "SampleAvaloniaApplication.sln"
          ]
        },
        {
          "condition": "(noTests)",
          "exclude": [
            "SampleAvaloniaApplication.Tests/**"
          ]
        }
      ]
    }
  ]
}